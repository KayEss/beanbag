{
    "Server": {
        "Load": ["beanbag-views"],
        "Port": 80,
        "Bind to": 0,
        "MIME types": "/etc/beanbag/mime-types.json"
    },

    "webserver": {

        "hosts": {
            "": "server"
        },

        "views": {
            "server": {
                "view": "fost.view.pathprefix",
                "configuration": {
                    "": "static",
                    "db/": "beanbags"
                }
            },
            "static": {
                "view": "fost.static",
                "configuration": {
                    "root": "/srv/www/"
                }
            },
            "beanbags": {
                "view": "beanbag.raw",
                "configuration": {
                    "database": {
                        "name": "root",
                        "filepath": "database.json"
                    },
                    "html": {}
                }
            }
        }

    }
}

