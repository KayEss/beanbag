{
    "webserver": {
        "load": ["libbeanbag-views-d.so"],

        "hosts": {
            "": "wiki"
        },

        "views": {
            "wiki": {
                "view": "beanbag.structured",
                "configuration": {
                    "database": {
                        "name": "wiki",
                        "filepath": "wiki.json",
                        "template": "usr/share/beanbag/wiki/database.json"
                    },
                    "html": {
                        "template": "usr/share/beanbag/wiki/template.html",
                        "redirect": {
                            "root": "usr/share/beanbag/wiki/template.html"
                        }
                    }
                }
            }
        }
    }
}
